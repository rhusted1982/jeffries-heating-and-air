{
  "name": "jeffries-heating-and-air",
  "version": "1.0.0",
  "description": "The SPA application for Jeffries Heating and Air.",
  "main": "index.js",
  "scripts": {
    "start": "node src/prodServer.js",
    "dev": "npm-run-all --parallel open:dev lint:dev",
    "open:dev": "babel-node src/devServer.js",
    "lint:dev": "npm run lint -- --watch",
    "preprod": "npm-run-all clean-dist lint:prod html",
    "prod": "babel-node src/tools/buildJs.js",
    "postprod": "node src/prodServer.js",
    "lint:prod": "npm run lint",
    "html": "babel-node src/tools/buildHtml.js",
    "clean-dist": "npm run remove-dist && mkdir dist",
    "remove-dist": "node_modules/.bin/rimraf ./dist",
    "lint": "esw webpack.config.* src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rhusted1982/jeffries-heating-and-air.git"
  },
  "author": "Richard Husted",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rhusted1982/jeffries-heating-and-air/issues"
  },
  "homepage": "https://github.com/rhusted1982/jeffries-heating-and-air#readme",
  "dependencies": {
    "bootstrap": "^3.3.7",
    "cheerio": "^0.20.0",
    "compression": "^1.6.2",
    "express": "^4.14.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "font-awesome": "^4.6.3",
    "fs": "0.0.2",
    "jquery": "^3.1.0",
    "mailgun-js": "^0.7.11",
    "open": "0.0.5",
    "path": "^0.12.7",
    "react": "^15.3.0",
    "react-dom": "^15.3.0",
    "react-router": "^2.6.1",
    "toastr": "^2.1.2",
    "webpack": "^1.13.1"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "css-loader": "^0.23.1",
    "eslint": "^3.2.0",
    "eslint-plugin-import": "^1.12.0",
    "eslint-plugin-react": "^5.2.2",
    "eslint-watch": "^2.1.14",
    "file-loader": "^0.9.0",
    "json-loader": "^0.5.4",
    "npm-run-all": "^2.3.0",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack-dev-middleware": "^1.6.1"
  }
}
